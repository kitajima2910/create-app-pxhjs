{
    "scopeName": "source.pxh",
    "name": "PXH",
    "patterns": [
        { "include": "#css-block" },
        { "include": "#html-block" },
        { "include": "#js-block" }
    ],
    "repository": {
        "css-block": {
            "begin": "pxh\\[css\\]:",
            "end": "(?=pxh\\[|$)",
            "name": "meta.embedded.block.css",
            "patterns": [{ "include": "source.css" }]
        },
        "html-block": {
            "begin": "pxh\\[html\\]:",
            "end": "(?=pxh\\[|$)",
            "name": "meta.embedded.block.html",
            "patterns": [{ "include": "text.html.basic" }]
        },
        "js-block": {
            "begin": "pxh\\[js\\]:",
            "end": "(?=pxh\\[|$)",
            "name": "meta.embedded.block.js",
            "patterns": [{ "include": "source.js" }]
        }
    }
}
