{
    "HTML Block 1": {
        "prefix": "pxh-html",
        "body": ["pxh[html]: {", "    $1", "}"],
        "description": "Chèn block HTML"
    },
    "CSS Block 1": {
        "prefix": "pxh-css",
        "body": ["pxh[css]: {", "    $1", "}"],
        "description": "Chèn block CSS"
    },
    "JS Block 1": {
        "prefix": "pxh-js",
        "body": ["pxh[js]: {", "    $1", "}"],
        "description": "Chèn block JS"
    },

    "!DOCTYPE": {
        "prefix": "doctype",
        "body": ["<!DOCTYPE html>"],
        "description": "Khai báo doctype HTML5"
    },
    "HTML": {
        "prefix": "html",
        "body": ["<html>", "    $1", "</html>"],
        "description": "Thẻ gốc HTML"
    },
    "Head": {
        "prefix": "head",
        "body": ["<head>", "    $1", "</head>"],
        "description": "Phần metadata"
    },
    "Body": {
        "prefix": "body",
        "body": ["<body>", "    $1", "</body>"],
        "description": "Phần nội dung hiển thị"
    },
    "Title": {
        "prefix": "title",
        "body": ["<title>$1</title>"],
        "description": "Tiêu đề trang"
    },
    "Meta": {
        "prefix": "meta",
        "body": ["<meta charset=\"UTF-8\">"],
        "description": "Khai báo metadata"
    },

    "Header": {
        "prefix": "header",
        "body": ["<header>", "    $1", "</header>"],
        "description": "Phần đầu trang"
    },
    "Nav": {
        "prefix": "nav",
        "body": ["<nav>", "    $1", "</nav>"],
        "description": "Thanh điều hướng"
    },
    "Main": {
        "prefix": "main",
        "body": ["<main>", "    $1", "</main>"],
        "description": "Nội dung chính"
    },
    "Section": {
        "prefix": "section",
        "body": ["<section>", "    $1", "</section>"],
        "description": "Phần nội dung"
    },
    "Article": {
        "prefix": "article",
        "body": ["<article>", "    $1", "</article>"],
        "description": "Bài viết độc lập"
    },
    "Aside": {
        "prefix": "aside",
        "body": ["<aside>", "    $1", "</aside>"],
        "description": "Nội dung phụ"
    },
    "Footer": {
        "prefix": "footer",
        "body": ["<footer>", "    $1", "</footer>"],
        "description": "Phần chân trang"
    },

    "Heading": {
        "prefix": "h",
        "body": ["<h1>$1</h1>"],
        "description": "Tiêu đề h1-h6"
    },
    "Paragraph": {
        "prefix": "p",
        "body": ["<p>$1</p>"],
        "description": "Đoạn văn"
    },
    "Break": {
        "prefix": "br",
        "body": ["<br>"],
        "description": "Xuống dòng"
    },
    "Horizontal Rule": {
        "prefix": "hr",
        "body": ["<hr>"],
        "description": "Đường kẻ ngang"
    },

    "Strong": {
        "prefix": "strong",
        "body": ["<strong>$1</strong>"],
        "description": "Chữ đậm"
    },
    "Emphasis": {
        "prefix": "em",
        "body": ["<em>$1</em>"],
        "description": "Chữ nghiêng"
    },
    "Bold": {
        "prefix": "b",
        "body": ["<b>$1</b>"],
        "description": "Chữ đậm (không ngữ nghĩa)"
    },
    "Italic": {
        "prefix": "i",
        "body": ["<i>$1</i>"],
        "description": "Chữ nghiêng (không ngữ nghĩa)"
    },
    "Underline": {
        "prefix": "u",
        "body": ["<u>$1</u>"],
        "description": "Gạch dưới"
    },
    "Mark": {
        "prefix": "mark",
        "body": ["<mark>$1</mark>"],
        "description": "Highlight"
    },
    "Small": {
        "prefix": "small",
        "body": ["<small>$1</small>"],
        "description": "Chữ nhỏ"
    },
    "Delete": {
        "prefix": "del",
        "body": ["<del>$1</del>"],
        "description": "Chữ gạch xóa"
    },
    "Insert": {
        "prefix": "ins",
        "body": ["<ins>$1</ins>"],
        "description": "Chữ chèn thêm"
    },

    "Anchor": {
        "prefix": "a",
        "body": ["<a href=\"$1\">$2</a>"],
        "description": "Liên kết"
    },
    "Image": {
        "prefix": "img",
        "body": ["<img src=\"$1\" alt=\"$2\">"],
        "description": "Hình ảnh"
    },
    "Figure": {
        "prefix": "figure",
        "body": [
            "<figure>",
            "    <img src=\"$1\" alt=\"$2\">",
            "    <figcaption>$3</figcaption>",
            "</figure>"
        ],
        "description": "Ảnh với chú thích"
    },
    "Figcaption": {
        "prefix": "figcaption",
        "body": ["<figcaption>$1</figcaption>"],
        "description": "Chú thích hình"
    },

    "Unordered List": {
        "prefix": "ul",
        "body": ["<ul>", "    <li>$1</li>", "</ul>"],
        "description": "Danh sách không thứ tự"
    },
    "Ordered List": {
        "prefix": "ol",
        "body": ["<ol>", "    <li>$1</li>", "</ol>"],
        "description": "Danh sách có thứ tự"
    },
    "List Item": {
        "prefix": "li",
        "body": ["<li>$1</li>"],
        "description": "Mục trong danh sách"
    },
    "Definition List": {
        "prefix": "dl",
        "body": ["<dl>", "    <dt>$1</dt>", "    <dd>$2</dd>", "</dl>"],
        "description": "Danh sách định nghĩa"
    },

    "Table": {
        "prefix": "table",
        "body": [
            "<table>",
            "    <tr>",
            "        <th>$1</th>",
            "        <td>$2</td>",
            "    </tr>",
            "</table>"
        ],
        "description": "Bảng dữ liệu"
    },
    "Table Row": {
        "prefix": "tr",
        "body": ["<tr>", "    $1", "</tr>"],
        "description": "Hàng bảng"
    },
    "Table Header": {
        "prefix": "th",
        "body": ["<th>$1</th>"],
        "description": "Ô tiêu đề bảng"
    },
    "Table Data": {
        "prefix": "td",
        "body": ["<td>$1</td>"],
        "description": "Ô dữ liệu bảng"
    },

    "Form": {
        "prefix": "form",
        "body": ["<form action=\"$1\" method=\"$2\">", "    $3", "</form>"],
        "description": "Biểu mẫu"
    },
    "Input": {
        "prefix": "input",
        "body": ["<input type=\"$1\" name=\"$2\">"],
        "description": "Trường nhập liệu"
    },
    "Textarea": {
        "prefix": "textarea",
        "body": ["<textarea name=\"$1\">$2</textarea>"],
        "description": "Ô nhập văn bản nhiều dòng"
    },
    "Select": {
        "prefix": "select",
        "body": [
            "<select name=\"$1\">",
            "    <option value=\"$2\">$3</option>",
            "</select>"
        ],
        "description": "Danh sách chọn"
    },
    "Option": {
        "prefix": "option",
        "body": ["<option value=\"$1\">$2</option>"],
        "description": "Tùy chọn trong select"
    },
    "Button": {
        "prefix": "button",
        "body": ["<button>$1</button>"],
        "description": "Nút bấm"
    },
    "Label": {
        "prefix": "label",
        "body": ["<label for=\"$1\">$2</label>"],
        "description": "Nhãn cho form"
    },

    "Audio": {
        "prefix": "audio",
        "body": [
            "<audio controls>",
            "    <source src=\"$1\" type=\"$2\">",
            "</audio>"
        ],
        "description": "Âm thanh"
    },
    "Video": {
        "prefix": "video",
        "body": [
            "<video controls>",
            "    <source src=\"$1\" type=\"$2\">",
            "</video>"
        ],
        "description": "Video"
    },
    "Canvas": {
        "prefix": "canvas",
        "body": ["<canvas id=\"$1\" width=\"$2\" height=\"$3\"></canvas>"],
        "description": "Canvas vẽ 2D"
    },
    "SVG": {
        "prefix": "svg",
        "body": ["<svg width=\"$1\" height=\"$2\">", "    $3", "</svg>"],
        "description": "Đồ họa SVG"
    },

    "Div": {
        "prefix": "div",
        "body": ["<div>$1</div>"],
        "description": "Thẻ khối"
    },
    "Span": {
        "prefix": "span",
        "body": ["<span>$1</span>"],
        "description": "Thẻ inline"
    },
    "Pre": {
        "prefix": "pre",
        "body": ["<pre>$1</pre>"],
        "description": "Văn bản giữ nguyên định dạng"
    },
    "Code": {
        "prefix": "code",
        "body": ["<code>$1</code>"],
        "description": "Mã nguồn"
    },
    "Blockquote": {
        "prefix": "blockquote",
        "body": ["<blockquote>$1</blockquote>"],
        "description": "Trích dẫn dài"
    },
    "Cite": {
        "prefix": "cite",
        "body": ["<cite>$1</cite>"],
        "description": "Trích dẫn ngắn"
    },

    "Marquee": {
        "prefix": "marquee",
        "body": ["<marquee>$1</marquee>"],
        "description": "Văn bản chạy (cũ)"
    },
    "Iframe": {
        "prefix": "iframe",
        "body": ["<iframe src=\"$1\" width=\"600\" height=\"400\"></iframe>"],
        "description": "Nhúng trang khác"
    }
}
